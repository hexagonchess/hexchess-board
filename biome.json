{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noPrototypeBuiltins": "off"
      }
    },
    "includes": [
      "**",
      "!**/node_modules/**/*",
      "!**/docs/**/*",
      "!**/docs-src/**/*",
      "!**/rollup-config.js",
      "!**/custom-elements.json",
      "!**/web-dev-server.config.js"
    ]
  }
}
