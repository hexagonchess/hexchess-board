{
  "name": "@hexchess/hexchess-board",
  "version": "1.0.21",
  "description": "A simple web component",
  "main": "hexchess-board.js",
  "module": "hexchess-board.js",
  "type": "module",
  "files": [
    "bishop.js",
    "board-state.js",
    "board.js",
    "game.js",
    "hexchess-board.d.ts",
    "hexchess-styles.js",
    "king.js",
    "knight.js",
    "pawn.js",
    "piece.js",
    "position.js",
    "queen.js",
    "rook.js",
    "types.js",
    "utils.js"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf hexchess-board.{d.ts,d.ts.map,js,js.map} test/*.{d.ts,d.ts.map,js,js.map} src/test/*.{d.ts,d.ts.map,js,js.map} *.{d.ts,js.map,d.ts.map} bishop.js board-state.js board.js game.js hexchess-styles.js king.js knight.js pawn.js piece.js position.js queen.js rook.js types.js utils.js",
    "lint": "npx @biomejs/biome lint src/*.ts src/**/**.ts",
    "lint-fix": "npx @biomejs/biome lint src/*.ts src/**/**.ts --apply",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "npx @biomejs/biome format docs-src/**/**.cjs docs-src/**/**.js src/*.ts src/**/**.ts ./*.cjs ./*.mts ./*.js ./*.json --write",
    "format-check": "npx @biomejs/biome format docs-src/**/**.cjs docs-src/**/**.js src/*.ts src/**/**.ts ./*.cjs ./*.mts ./*.js ./*.json",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/hexchess-board.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "wds --root-dir=docs --node-resolve --watch",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:dev && npm run test:prod",
    "test:unit": "jest --collect-coverage",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat hexchess-board.bundled.js | gzip -9 | wc -c ; rm hexchess-board.bundled.js"
  },
  "keywords": [
    "chess",
    "hexchess",
    "hexagon-chess",
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "hexchess",
  "license": "BSD-3-Clause",
  "dependencies": {
    "lit": "3.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.0.0",
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.7",
    "@babel/preset-typescript": "7.23.3",
    "@biomejs/biome": "1.5.3",
    "@custom-elements-manifest/analyzer": "0.6.3",
    "@dagger.io/dagger": "0.9.9",
    "@jest/globals": "29.7.0",
    "@open-wc/testing": "3.1.5",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "5.0.2",
    "@types/jest": "29.5.11",
    "@web/dev-server": "0.1.31",
    "@web/dev-server-legacy": "1.0.0",
    "@web/test-runner": "0.15.0",
    "@web/test-runner-playwright": "0.9.0",
    "@webcomponents/webcomponentsjs": "2.8.0",
    "babel-jest": "29.7.0",
    "jest": "29.7.0",
    "lit-analyzer": "1.2.1",
    "rimraf": "3.0.2",
    "rollup": "2.73.0",
    "rollup-plugin-summary": "1.4.3",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "customElements": "custom-elements.json",
  "types": "./hexchess-board.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexagonchess/hexchess-board.git"
  },
  "bugs": {
    "url": "https://github.com/hexagonchess/hexchess-board/issues"
  },
  "homepage": "https://github.com/hexagonchess/hexchess-board#readme"
}
